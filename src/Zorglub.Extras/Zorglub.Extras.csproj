<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(MyLibraryFrameworks)</TargetFrameworks>
    <AssemblyName>Zorglub.Time.Extras</AssemblyName>

    <DefineConstants Condition=" '$(HideInternals)' != 'true' ">$(DefineConstants);__VISIBLE_INTERNALS__</DefineConstants>
    <VersionSuffix Condition=" '$(EnablePreviewFeatures)' == 'true' or '$(LangVersion)' == 'preview' ">PREVIEW</VersionSuffix>

    <!-- IDE0004  Remove unnecessary cast -->
    <WarningsAsErrors>$(WarningsAsErrors);IDE0004</WarningsAsErrors>

    <IsPackable>true</IsPackable>
    <Title></Title>
    <Description></Description>
    <!--
    <PackageDescription><![CDATA[

    ]]></PackageDescription>
    -->
    <PackageTags>Calendar;Date;NTP</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Zorglub\Zorglub.csproj" />
  </ItemGroup>

</Project>
